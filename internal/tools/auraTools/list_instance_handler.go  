package auraTools

import (
	"context"

	"github.com/mark3labs/mcp-go/mcp"
)

func ListInstanceHandler() func(context.Context, mcp.CallToolRequest) (*mcp.CallToolResult, error) {
	return func(ctx context.Context, request mcp.CallToolRequest) (*mcp.CallToolResult, error) {
		return handleCreateInstance(ctx, request)
	}
}

func handleListInstance(ctx context.Context, request mcp.CallToolRequest) (*mcp.CallToolResult, error) {

	return mcp.NewToolResultText(""), nil
}
